<header>
    <h1>Best movies</h1>
</header>
<main>
    <h2>Movie Lists</h2>
  <ul class="list-cards">
    <% @lists.each do |list| %>
      <li style="background-image: url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>');">
        <%= link_to list.name, list_path(list) %>
      </li>
    <% end %>
    <li class="add-list">
      <%= link_to 'add movie', new_list_path %>
    </li>
  </ul>
</main>
